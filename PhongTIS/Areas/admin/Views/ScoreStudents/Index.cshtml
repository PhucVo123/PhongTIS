@model List<PhongTIS.Models.ScoreStudent>
@using PhongTIS.Help;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<div class="row g-4">
    <div class="col-sm-12 col-xl-12 col-md-12">
        <div class="bg-light rounded h-100 p-4">
            <h3 class="mb-4">Score Student</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            STT
                        </th>
                        <th>
                            Test
                        </th>
                        <th>
                            User Name
                        </th>
                        <th>
                            Score
                        </th>
                        <th>
                            Action
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{var Number = 1; }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.Raw(Number++)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Exercise.test) - @Html.DisplayFor(modelItem => item.Exercise.part)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.username)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.scoreTest)
                            </td>
                            <td>
                                @Html.NoEncodeActionLink("<span class='fa fa-trash'></span>", "Delete", "Delete", "ScoreStudents", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })
                            </td>                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
