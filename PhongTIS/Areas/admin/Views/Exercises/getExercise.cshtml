@model List<PhongTIS.Models.Exercise>
@using PhongTIS.Help;

<table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width:100%">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                Test
            </th>
            <th>
                Part
            </th>
            <th>
                Time
            </th>
            <th>
                Subject
            </th>
            <th>
                Hiển thị
            </th>
            <th>
                Vị trí
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{var Number = 1; }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.Raw(Number++)
                </td>
                <td style="text-align:left; white-space:wrap">
                    @Html.DisplayFor(modelItem => item.test)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.part)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.timer)
                </td>
                <td>
                    @(item.CategoryID == 1 ? "TOEIC" : "IELTS")
                </td>
                <td>
                    @(item.hide == true ? "Hiển thị" : "Ẩn")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order)
                </td>
                <td>
                    @Html.NoEncodeActionLink("<span class='fa fa-wrench'></span>", "Edit", "Edit", "Exercises", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-secondary" })
                    <br />
                    <br />
                    @Html.NoEncodeActionLink("<span class='fa fa-search'></span>", "Detail", "Details", "Exercises", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary" })
                    <br />
                    <br />
                    @Html.NoEncodeActionLink("<span class='fa fa-trash'></span>", "Delete", "Delete", "Exercises", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })

                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
        attachHandlers();
    });
</script>

